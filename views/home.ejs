<% include partials/header-top %>
<% title = 'Jobs Lister' %>
<% include partials/header-bottom %>

<main>
   <nav class='container my-5'>
      <section>
         <h1 class='border-bottom'>Results</h1>
         <% sites.forEach(function(site) { %>
            <p>
               <!-- Site link -->
               <a class='btn btn-primary btn-block' href='/<%= site %>'><%= site %></a>
            </p>
         <% }) %>
      </section>

      <div class='separator mb-5 mt-5'>

      <section>
         <h1 class='border-bottom'>Settings</h1>
         <a class='btn btn-secondary btn-block' href='/settings'>Change the settings</a>
      </section>
   </nav>
</main>
<% include partials/footer %>
